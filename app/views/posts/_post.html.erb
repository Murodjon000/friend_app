<div class='d-flex flex-column'>
  <div class='d-flex justify-content-between'>
    <div>
      <%= link_to gravatar_for(post.user,size:40), user_path(post.user), class: 'rounded-circle' %>
      <%= link_to post.user.name, user_path(post.user), class: 'post-user' %>
    </div>
    <div>
      <span class='text-black'> Posted <%= time_ago_in_words(post.created_at) %> ago. </span>
      <%= like_dislike(post) %>
    </div>
  </div>

 <div>
   <p class='post-content'>
    <%= post.content %>
    <hr>
  </p>

 </div>

  <div class='mb-3'>
    <%= render partial: 'comments/comments', collection: post.comments %>
    <div class=''>
    <%= form_for(post.comments.new, url: post_comments_path(post)) do |f| %>
      <%= f.text_area :content, class: 'form-control', placeholder: 'Add Comment' %>
      <%= f.submit 'Comment', class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>

</div>
